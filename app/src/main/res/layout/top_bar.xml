<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_main">

    <View
        android:id="@+id/bg_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/bg_top_search"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:background="@drawable/bg_top_search"
        app:layout_constraintWidth_percent="0.77"
        app:layout_constraintTop_toTopOf="@id/bg_top_bar"
        app:layout_constraintBottom_toBottomOf="@id/bg_top_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.06"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toLeftOf="@id/bg_top_search"
        app:layout_constraintTop_toTopOf="@id/bg_top_search"
        app:layout_constraintBottom_toBottomOf="@id/bg_top_search"
        android:src="@drawable/search"
        />

    <ImageView
        android:id="@+id/scan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.06"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintRight_toRightOf="@id/bg_top_search"
        app:layout_constraintTop_toTopOf="@id/bg_top_bar"
        app:layout_constraintBottom_toBottomOf="@id/bg_top_bar"
        android:layout_marginRight="15dp"
        android:src="@drawable/scan"
        />

    <ImageView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintRight_toRightOf="@id/bg_top_bar"
        app:layout_constraintTop_toTopOf="@id/bg_top_bar"
        app:layout_constraintBottom_toBottomOf="@id/bg_top_bar"
        android:layout_marginRight="15dp"
        android:src="@drawable/message"
        />
</merge>