<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_main">

    <View
        android:id="@+id/buttom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:1.3"
        app:layout_constraintTop_toTopOf="@id/buttom_navigation_bar"
        app:layout_constraintBottom_toBottomOf="@id/buttom_navigation_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_game"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <ImageView
        android:id="@+id/btn_game"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:1.3"
        app:layout_constraintTop_toTopOf="@id/buttom_navigation_bar"
        app:layout_constraintBottom_toBottomOf="@id/buttom_navigation_bar"
        app:layout_constraintLeft_toRightOf="@id/btn_home"
        app:layout_constraintRight_toLeftOf="@id/btn_billboard"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <ImageView
        android:id="@+id/btn_billboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:1.3"
        app:layout_constraintTop_toTopOf="@id/buttom_navigation_bar"
        app:layout_constraintBottom_toBottomOf="@id/buttom_navigation_bar"
        app:layout_constraintLeft_toRightOf="@id/btn_game"
        app:layout_constraintRight_toLeftOf="@id/btn_article"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <ImageView
        android:id="@+id/btn_article"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:1.3"
        app:layout_constraintTop_toTopOf="@id/buttom_navigation_bar"
        app:layout_constraintBottom_toBottomOf="@id/buttom_navigation_bar"
        app:layout_constraintLeft_toRightOf="@id/btn_billboard"
        app:layout_constraintRight_toLeftOf="@id/btn_mine"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <ImageView
        android:id="@+id/btn_mine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:1.3"
        app:layout_constraintTop_toTopOf="@id/buttom_navigation_bar"
        app:layout_constraintBottom_toBottomOf="@id/buttom_navigation_bar"
        app:layout_constraintLeft_toRightOf="@id/btn_article"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread" />
    <TextView
        android:id="@+id/tv_btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/btn_home"
        app:layout_constraintRight_toRightOf="@id/btn_home"
        app:layout_constraintBottom_toBottomOf="@id/btn_home"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/tv_btn_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/btn_game"
        app:layout_constraintRight_toRightOf="@id/btn_game"
        app:layout_constraintBottom_toBottomOf="@id/btn_game"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/tv_btn_billboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/btn_billboard"
        app:layout_constraintRight_toRightOf="@id/btn_billboard"
        app:layout_constraintBottom_toBottomOf="@id/btn_billboard"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/tv_btn_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/btn_article"
        app:layout_constraintRight_toRightOf="@id/btn_article"
        app:layout_constraintBottom_toBottomOf="@id/btn_article"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/tv_btn_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/btn_mine"
        app:layout_constraintRight_toRightOf="@id/btn_mine"
        app:layout_constraintBottom_toBottomOf="@id/btn_mine"
        android:layout_marginBottom="10dp"
        />

</merge>