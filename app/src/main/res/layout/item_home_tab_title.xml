<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <TextView
        android:id="@+id/tv_in_theater"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="1"
        android:paddingTop="10dp"
        tools:text="影院热映"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tv_coming_soon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_in_theater"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="1"
        android:paddingTop="10dp"
        tools:text="即将上映"
        android:textSize="20sp"
        />
    <View
        android:id="@+id/indicator_in_theater"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toBottomOf="@id/tv_in_theater"
        app:layout_constraintLeft_toLeftOf="@id/tv_in_theater"
        app:layout_constraintRight_toRightOf="@id/tv_in_theater"
        android:background="@drawable/bg_movie_indicator"
        />
    <View
        android:id="@+id/indicator_coming_soon"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toBottomOf="@id/tv_coming_soon"
        app:layout_constraintLeft_toLeftOf="@id/tv_coming_soon"
        app:layout_constraintRight_toRightOf="@id/tv_coming_soon"
        android:background="@drawable/bg_movie_indicator"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_movie_cinema_seeall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="10dp"
        app:layout_constraintRight_toLeftOf="@id/iv_ic_seeall"
        tools:text="全部 20"
        android:textSize="17sp"
        />
    <ImageView
        android:id="@+id/iv_ic_seeall"
        android:layout_width="0dp"
        android:layout_height="18dp"
        app:layout_constraintWidth_percent="0.05"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_movie_cinema_seeall"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#DFDFDF"
        />


</androidx.constraintlayout.widget.ConstraintLayout>