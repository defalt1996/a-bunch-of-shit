<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25"
        tools:text="影院热映" />

    <TextView
        android:id="@+id/tv_movie_cinema_seeall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_ic_seeall"
        tools:text="全部 20"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="25dp"
        android:textSize="17sp"
        />
    <ImageView
        android:id="@+id/iv_ic_seeall"
        android:layout_width="0dp"
        android:layout_height="15dp"
        app:layout_constraintWidth_percent="0.05"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toTopOf="@id/tv_movie_cinema_seeall"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_movie_cinema_seeall"
        android:layout_marginRight="15dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#DFDFDF"
        android:layout_marginBottom="13dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>