<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/movie_ads_img"
        android:layout_width="0dp"
        android:layout_height="135dp"
        fresco:layout_constraintDimensionRatio="W, 3: 3.7"
        app:layout_constraintTop_toTopOf="parent"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintRight_toLeftOf="@id/movie_content_img"
        fresco:roundedCornerRadius="3dp"
        android:layout_marginTop="20dp"
        />
    <com.youth.banner.Banner
        android:id="@+id/movie_content_img"
        android:layout_width="0dp"
        android:layout_height="135dp"
        fresco:layout_constraintDimensionRatio="W, 16: 9"
        app:layout_constraintTop_toTopOf="parent"
        fresco:layout_constraintLeft_toRightOf="@id/movie_ads_img"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:roundedCornerRadius="3dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintLeft_toLeftOf="@id/movie_ads_img"
        fresco:layout_constraintTop_toBottomOf="@id/movie_ads_img"
        tools:text="阿甘正传"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/movie_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintLeft_toRightOf="@id/movie_title"
        fresco:layout_constraintTop_toTopOf="@id/movie_title"
        fresco:layout_constraintBottom_toBottomOf="@id/movie_title"
        android:textSize="17sp"
        tools:text="(2019)"
        android:layout_marginStart="3dp"
        />
    <com.defalt.a_bunch_of_shit.widget.StarMarkView
        android:id="@+id/movie_marks_star"
        android:layout_width="80dp"
        android:layout_height="0dp"
        fresco:layout_constraintTop_toBottomOf="@id/movie_title"
        fresco:layout_constraintLeft_toLeftOf="@id/movie_title"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/movie_marks_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintLeft_toRightOf="@id/movie_marks_star"
        fresco:layout_constraintBottom_toBottomOf="@id/movie_marks_star"
        android:layout_marginStart="3dp"
        tools:text="9.7"
        />
    <TextView
        android:id="@+id/hot_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        fresco:layout_constraintTop_toBottomOf="@id/movie_marks_star"
        fresco:layout_constraintLeft_toLeftOf="@id/movie_marks_star"
        fresco:layout_constraintRight_toRightOf="@id/movie_content_img"
        tools:text="墙里的人老是喊自由，可是墙外的我们真正得到了吗？  --游牧人·芳汀"
        android:layout_marginTop="5dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>